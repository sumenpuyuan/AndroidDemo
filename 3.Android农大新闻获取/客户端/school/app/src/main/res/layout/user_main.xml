<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UserMain">
    <com.example.lv.school.Model.NoScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fd48ff"
        app:tabIndicatorColor="#66ff33"
        app:tabIndicatorHeight="20dp"
        app:tabTextColor="#5C307D"
        app:tabSelectedTextColor="#fff"
        app:tabMode="fixed"
        app:tabBackground="@drawable/slected"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"/>

</LinearLayout>